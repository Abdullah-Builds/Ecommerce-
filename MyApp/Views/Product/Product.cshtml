@model IEnumerable<MyApp.Models.ProductModel>

<link rel="stylesheet" href="~/css/Product.css" asp-append-version="true" />
<script src="~/js/Product.js" asp-append-version="true" defer></script>

@for (int i = 0; i < 5; i++)
{
    <section style="background: linear-gradient(135deg, #f5f7fa, #c3cfe2);">
        <div class="container py-5">
            <div class="swiper productSwiper">
                <div class="swiper-wrapper">
                    @foreach (var item in Model)
                    {
                        <div class="swiper-slide">
                            <div class="card product-card border-0 rounded-4 shadow-lg">
                                <div class="product-image-container">
                                    <img src="@item.Image" class="w-100 product-image" alt="@item.Name">
                                    <div class="product-overlay">
                                        @if (!string.IsNullOrEmpty(item.Tag) && item.Tag == "New")
                                        {
                                            <span class="badge bg-primary p-2 px-3 shadow-sm">@item.Tag</span>
                                        }
                                        else if (!string.IsNullOrEmpty(item.Tag))
                                        {
                                            <span class="badge bg-success p-2 px-3 shadow-sm">@item.Tag</span>
                                        }
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5 class="fw-bold mb-2">@item.Name</h5>
                                    <div class="d-flex align-items-center mb-3">
                                        <p class="text-muted small mb-2">@item.Description</p>
                                        <h5 class="mb-0 text-primary">@item.Price</h5>
                                        <span class="text-muted ms-2"><s>@item.MutedPrice</s></span>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-primary btn-sm">View</button>

                                        @{
                                            var escapedimage = item.Image?.Replace(@"\", "/") ?? string.Empty;
                                        }
                                        <button class="btn btn-outline-primary btn-sm"
                                                onclick="addToWishlist({
                                                            name: '@item.Name',
                                                            price: '@item.Price',
                                                            tag: '@item.Tag',
                                                            description: '@item.Description',
                                                            image: '@escapedimage',
                                                            mutedprice : '@item.MutedPrice',
                                                            id : '@item.Id',
                                                        })">
                                            Wishlist
                                        </button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-pagination"></div> 
        </div>

    </section>
}

