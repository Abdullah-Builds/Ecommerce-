@{
    var pageTitle = ViewData["Title"] as string ?? "MyApp";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@pageTitle - My Store</title>

    <link href="https://unicons.iconscout.com/release/v4.0.8/css/line.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.7.2/vanilla-tilt.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    <script src="~/js/cart.js"></script>
</head>
<body class="layout-has-fixed-nav">
    <header class="site-header">
        <nav class="nav navbar-expand-md " aria-label="Primary">
            <!-- Mobile open button -->
            <button type="button" class="uil uil-bars navOpenBtn d-md-none" aria-label="Open menu" aria-controls="primaryNav" aria-expanded="false"></button>

            <!-- Logo -->
            <div class="logo-container mx-5">
                <a href="~/" class="logo">CodingLab</a>
            </div>

            <!-- Navigation Links -->
            <div class="nav-actions flex-grow-1 d-flex align-items-center">
                <ul id="primaryNav" class="nav-links mx-auto" role="menubar">
                    <li><button type="button" class="uil uil-times navCloseBtn" aria-label="Close menu" aria-controls="primaryNav" aria-expanded="true"></button></li>
                    <li><a href="#">Home</a></li>
                    <li><a href="/Products/Products">Products</a></li>
                    <li><a href="/About/About">About Us</a></li>
                    <li><a href="/Feedback/Feedback">Cutsomer Review</a></li>
                </ul>

                <a href="/Cart/Cart" class="cart-button">
                    <span class="cart-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none"
                             viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <circle r="1" cy="21" cx="9"></circle>
                            <circle r="1" cy="21" cx="20"></circle>
                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                        </svg>
                    </span>
                    View Cart
                    <span class="progress-bar"></span>
                </a>

                <!-- Right-side buttons -->
                <div class="action-buttons ms-auto d-flex align-items-center">
                    <button type="button" class="uil uil-search search-icon me-3" id="searchIcon" aria-label="Open search"></button>
                    <button type="button" class="uil uil-moon theme-toggle" id="themeToggle" aria-label="Toggle dark mode"></button>
                </div>

            </div>
            <!-- Search Box -->
            <form class="search-box mb-2" role="search" aria-expanded="false" onsubmit="return false;">
                <i class="uil uil-search search-icon" aria-hidden="true"></i>
                <input type="search" placeholder="Search here..." aria-label="Search" />
                <button type="button" class="uil uil-times search-close-btn" id="searchCloseBtn" aria-label="Close search"></button>
            </form>
        </nav>
    </header>
    <div class="container site-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
       <footer>
         @RenderSection("FooterContent", required: false)
     </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Layout.js" asp-append-version="true"></script>

    
</body>
</html>
