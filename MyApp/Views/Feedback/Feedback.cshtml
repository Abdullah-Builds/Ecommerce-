@{
    ViewData["Title"] = "Feedback";
}

<div class="bg-gradient-to-br from-white to-slate-50 dark:from-slate-900 dark:to-slate-800 border border-slate-200 dark:border-slate-700 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-6 gap-4 rounded-2xl p-6 text-sm shadow-lg hover:shadow-2xl transition-all duration-300 mx-auto mt-6 w-ful h-50 max-w-4xl">

    <!-- Title -->
    <h1 class="col-span-full text-center bg-gradient-to-r from-slate-600 to-slate-800 bg-clip-text text-transparent dark:from-slate-300 dark:to-slate-100 text-3xl font-extrabold tracking-tight mb-4">
        Send Feedback
    </h1>

    <!-- Textarea -->
    <textarea class="bg-slate-50/80 dark:bg-slate-800 dark:text-slate-200 text-slate-700 h-36 placeholder:text-slate-400 dark:placeholder:text-slate-500 border border-slate-200 dark:border-slate-600 col-span-full resize-none outline-none rounded-xl p-4 duration-300 hover:bg-slate-50 dark:hover:bg-slate-700 focus:border-slate-600 focus:ring-2 focus:ring-slate-300 dark:focus:ring-slate-500 focus:shadow-inner"
              placeholder="Your feedback..."></textarea>

    <!-- Reaction Buttons -->
    <div class="flex col-span-full sm:col-span-2 lg:col-span-2 gap-3">
        <!-- Smile -->
        <button class="flex-1 flex justify-center items-center rounded-xl p-4 duration-300 bg-slate-50/80 dark:bg-slate-800 hover:bg-slate-100 dark:hover:bg-slate-700 border border-slate-200 dark:border-slate-600 active:scale-95 focus:outline-none focus:ring-2 focus:ring-blue-300 hover:shadow-md group">
            <svg class="w-6 h-6 fill-slate-600 dark:fill-slate-300 transition-transform group-hover:scale-110 duration-200"
                 viewBox="0 0 512 512"
                 xmlns="http://www.w3.org/2000/svg">
                <path d="M464 256A208 208 0 1 0 48 256a208 208 0 1 0 416 0zM0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256zm177.6 62.1C192.8 334.5 218.8 352 256 352s63.2-17.5 78.4-33.9c9-9.7 24.2-10.4 33.9-1.4s10.4 24.2 1.4 33.9c-22 23.8-60 49.4-113.6 49.4s-91.7-25.5-113.6-49.4c-9-9.7-8.4-24.9 1.4-33.9s24.9-8.4 33.9 1.4zM144.4 208a32 32 0 1 1 64 0 32 32 0 1 1 -64 0zm192-32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z"></path>
            </svg>
        </button>

        <!-- Sad -->
        <button class="flex-1 flex justify-center items-center rounded-xl p-4 duration-300 bg-slate-50/80 dark:bg-slate-800 hover:bg-slate-100 dark:hover:bg-slate-700 border border-slate-200 dark:border-slate-600 active:scale-95 focus:outline-none focus:ring-2 focus:ring-red-300 hover:shadow-md group">
            <svg class="w-6 h-6 fill-slate-600 dark:fill-slate-300 transition-transform group-hover:scale-110 duration-200"
                 viewBox="0 0 512 512"
                 xmlns="http://www.w3.org/2000/svg">
                <path d="M464 256A208 208 0 1 0 48 256a208 208 0 1 0 416 0zM0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256zM174.6 384.1c-4.5 12.5-18.2 18.9-30.7 14.4s-18.9-18.2-14.4-30.7C146.9 319.4 198.9 288 256 288s109.1 31.4 126.6 79.9c4.5 12.5-2 26.2-14.4 30.7s-26.2-2-30.7-14.4C328.2 358.5 297.2 336 256 336s-72.2 22.5-81.4 48.1zM144.4 208a32 32 0 1 1 64 0 32 32 0 1 1 -64 0zm192-32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z"></path>
            </svg>
        </button>
    </div>

    <!-- Spacer for large screens -->
    <div class="hidden lg:block col-span-1"></div>

    <!-- Submit Button -->
    <div class="col-span-full sm:col-span-2 lg:col-span-3 flex justify-center">
        <button class="w-full sm:w-auto bg-blue-50 dark:bg-blue-900 text-slate-800 dark:text-white border border-slate-200 dark:border-slate-700 flex items-center justify-center gap-2 rounded-xl px-6 py-3 font-semibold duration-300 hover:bg-blue-100 dark:hover:bg-blue-800 hover:border-blue-400 active:scale-95 focus:outline-none focus:ring-2 focus:ring-blue-400 hover:shadow-lg group">
            <svg class="w-5 h-5 stroke-slate-700 dark:stroke-white group-hover:translate-x-1 transition-transform duration-200"
                 xmlns="http://www.w3.org/2000/svg"
                 fill="none"
                 viewBox="0 0 24 24">
                <path d="M7.4 6.3L15.9 3.5C19.7 2.2 21.8 4.3 20.5 8.1L17.7 16.6C15.8 22.3 12.7 22.3 10.8 16.6L9.9 14.1L7.4 13.2C1.7 11.3 1.7 8.2 7.4 6.3Z"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"></path>
                <path d="M10.1 13.65L13.7 10.06"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"></path>
            </svg>
            <span class="tracking-tight">Send</span>
        </button>
    </div>
</div>


<footer class="bg-slate-100 dark:bg-slate-900 text-slate-700 dark:text-slate-300 border-t border-slate-200 dark:border-slate-700 py-5 px-6 mt-5">
    <div class="max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

        <!-- Logo / Brand -->
        <div>
            <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-2">MyApp</h2>
            <p class="text-sm text-slate-600 dark:text-slate-400">Empowering user feedback with simplicity and clarity.</p>
        </div>

        <!-- Quick Links -->
        <div>
            <h3 class="text-sm font-semibold text-slate-800 dark:text-slate-200 uppercase tracking-wider mb-3">Links</h3>
            <ul class="space-y-2 text-sm">
                <li><a href="/" class="hover:text-blue-600 dark:hover:text-blue-400 transition">Home</a></li>
                <li><a href="/About" class="hover:text-blue-600 dark:hover:text-blue-400 transition">About</a></li>
                <li><a href="/Feedback" class="hover:text-blue-600 dark:hover:text-blue-400 transition">Feedback</a></li>
                <li><a href="/Contact" class="hover:text-blue-600 dark:hover:text-blue-400 transition">Contact</a></li>
            </ul>
        </div>

        <!-- Contact Info -->
        <div>
            <h3 class="text-sm font-semibold text-slate-800 dark:text-slate-200 uppercase tracking-wider mb-3">Contact</h3>
            <ul class="text-sm space-y-2">
                <li>Email: <a href="mailto:support@myapp.com" class="hover:text-blue-600 dark:hover:text-blue-400">support@myapp.com</a></li>
                <li>Phone: <span class="text-slate-600 dark:text-slate-400">+1 (555) 123-4567</span></li>
                <li>Location: <span class="text-slate-600 dark:text-slate-400">New York, NY</span></li>
            </ul>
        </div>
    </div>

    <!-- Bottom Text -->
    <div class="mt-10 text-center text-xs text-slate-500 dark:text-slate-500">
        &copy; 2025 MyApp. All rights reserved.
    </div>
</footer>


